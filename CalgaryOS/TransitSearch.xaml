<UserControl x:Class="CalgaryOS.TransitSearch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalgaryOS"
        mc:Ignorable="d"
        d:DesignHeight="889" d:DesignWidth="500">
    <Grid Margin="0,0,-0.4,0.2" HorizontalAlignment="Center">

        <!--Transit Search-->

        <Image HorizontalAlignment="Left" Height="688" VerticalAlignment="Top" Width="729" Source="Images/googmap_tran.png" Margin="-24,14,-205,0"/>
        <Canvas x:Name="Canvas1" Background="Transparent" >
            <Button Content="Train (direction) in x mins" HorizontalAlignment="Left" Height="69" VerticalAlignment="Top" Width="494" Margin="-1,0,0,0" FontSize="40" Background="#FFFD9999"/>
            <Button Content="Bus#x in x mins" HorizontalAlignment="Left" Height="69" VerticalAlignment="Top" Width="494" Margin="0,69,0,0" FontSize="40" Background="#FF99D7FD"/>
            <Image Source ="Icons/pointer_black.png" RenderTransformOrigin="0.231,0.072" Height="37" Canvas.Left="225" Canvas.Top="258" />


            <Button BorderThickness="3" HorizontalAlignment="Left" Height="102" Margin="-3,757,0,0" VerticalAlignment="Top" Width="125" BorderBrush="#FF707070" FontSize="18" ClickMode="Press" FontFamily="Microsoft Sans Serif" Background="#FFFF6551" Click="Button_Click_3">
                <StackPanel>
                    <Image Opacity="1" Source="Icons/Star.png" Height="56" Width="106" />
                    <TextBox Background="{x:Null}" HorizontalAlignment="Center" BorderBrush="{x:Null}">
                        Explore
                    </TextBox>
                </StackPanel>
            </Button>
            <Button BorderThickness="3" HorizontalAlignment="Left" Height="102" Margin="121,757,0,0" VerticalAlignment="Top" Width="124" BorderBrush="#FF707070" FontSize="18" ClickMode="Press" FontFamily="Microsoft Sans Serif" Background="#FF5192FF" Click="Button_Click_4">
                <StackPanel>
                    <Image Opacity="1" Source="Icons/Bus.png" Height="62" Width="108" />
                    <TextBox Background="{x:Null}" HorizontalAlignment="Center" BorderBrush="{x:Null}">
                        Transit
                    </TextBox>
                </StackPanel>
            </Button>
            <Button BorderThickness="3" HorizontalAlignment="Left" Height="102" Margin="244,757,0,0" VerticalAlignment="Top" Width="125" Click="Button_Click" BorderBrush="#FF707070" FontSize="18" ClickMode="Press" FontFamily="Microsoft Sans Serif" Background="#FFFF6551">
                <StackPanel>
                    <Image Opacity="1" Source="Icons/Map.png" Height="59" Width="66" />
                    <TextBox Background="{x:Null}" HorizontalAlignment="Center" BorderBrush="{x:Null}">
                        Map
                    </TextBox>
                </StackPanel>
            </Button>
            <Button  BorderThickness="3" HorizontalAlignment="Left" Height="102" Margin="368,757,0,0" VerticalAlignment="Top" Width="122" BorderBrush="#FF707070" FontSize="18" ClickMode="Press" FontFamily="Microsoft Sans Serif" Background="#FFFF6551" Click="Button_Click_5">
                <StackPanel>
                    <Image Opacity="1" Source="Icons/calgary.png" Height="59" Width="108" />
                    <TextBox Background="{x:Null}" HorizontalAlignment="Center" BorderBrush="{x:Null}">
                        Services
                    </TextBox>
                </StackPanel>
            </Button>
            <Button Content="Language"  HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="122" Click="Button_Click_6" RenderTransformOrigin="0.5,0.5" FontSize="18" BorderThickness="3" FontFamily="Microsoft Sans Serif" Canvas.Left="344" Canvas.Top="488">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="25"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="313" RenderTransformOrigin="0.5,0.5" FontSize="18" BorderBrush="#FF707070" Padding="15,1,1,1" BorderThickness="3" FontFamily="Microsoft Sans Serif" Canvas.Left="12" Canvas.Top="487">
                <StackPanel Orientation="Horizontal">
                    <Image Opacity="0.6" Source="Icons/search.png" Height="37" Width="39" />
                    <TextBlock Text="Search" Width="353" Height="23" />
                </StackPanel>
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="25"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Content="1 2 3 4 5 6 7 8 9 0 -&#xA;Q W E R T Y U I O P &#xA;   A S D F G H J K L &#xA;    Z X C V B N M &#xA;          SPACE " Click="Button_Click_1" HorizontalAlignment="Center" Height="209" Margin="-3.2,550,-0.2,0" VerticalAlignment="Top" Width="497" FontSize="30" TextOptions.TextHintingMode="Fixed" Background="#FFFF6551" ScrollViewer.CanContentScroll="True" UseLayoutRounding="False" BorderThickness="3" HorizontalContentAlignment="Left" Padding="50,1,1,1"/>
            <Button Content="&lt;-" HorizontalAlignment="Left" Height="32" Margin="378,561,0,0" VerticalAlignment="Top" Width="99" Background="#FFBDBDBD"/>
            <Button Content="Clear" HorizontalAlignment="Left" Height="32" Margin="378,601,0,0" VerticalAlignment="Top" Width="99" Background="#FFBDBDBD"/>
            <Button Content=" |&#xD;&#xA;\/" HorizontalAlignment="Left" Height="39" Margin="378,709,0,0" VerticalAlignment="Top" Width="92" Click="Button_Click_2" Background="#FFBDBDBD"/>
            <Button Content="Enter" HorizontalAlignment="Left" Height="32" Margin="378,641,0,0" VerticalAlignment="Top" Width="99" Background="#FFBDBDBD" Click="Button_Click_1"/>


        </Canvas>





    </Grid>
</UserControl>
